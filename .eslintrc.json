{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
        {
            "files": ["*.js","*.cjs"],
            "rules": {
                "no-unused-vars": "off",
                "no-empty": "off",
                "no-useless-escape": "off",
                "no-control-regex":"off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
    }
}
